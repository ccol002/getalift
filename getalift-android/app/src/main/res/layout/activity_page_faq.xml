<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageFaqActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tlb_profile"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_marginTop="4dp"
        android:background="#40E0D0"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="492dp"
        app:layout_constraintTop_toBottomOf="@+id/tlb_profile"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textStyle ="bold"
                android:text="How to create an account ?" />

            <TextView
                android:id="@+id/text_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="→ Just go to the login page and click on the create an account button.\n Then fill in the fields with your personal data." />

            <TextView
                android:id="@+id/text_question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textStyle ="bold"
                android:text="How to create a trip ?" />

            <TextView
                android:id="@+id/text_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="→ Click on Enter destination \n → Fill in the fields related to your trip \n → Click on Go
 \n And here is your trip and create and you can view all your saved trips in My drives" />

            <TextView
                android:id="@+id/text_question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textStyle ="bold"
                android:text="And if I want to drive ?" />

            <TextView
                android:id="@+id/text_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="→ After recording my trip, by clicking on I want to drive, I can propose to be a driver
\n Then, a page to create your route will be displayed." />

            <TextView
                android:id="@+id/text_question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textStyle ="bold"
                android:text="How to access my profile ?" />

            <TextView
                android:id="@+id/text_answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="→ On the home page, click on the menu at the top left of the screen.\n → Click on My profile" />

            <TextView
                android:id="@+id/text_question5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textStyle ="bold"
                android:text="How to contact someone who is on the same trip as me ?" />

            <TextView
                android:id="@+id/text_answer5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="→ Once the trip is saved, a page with the available routes appears \n → Click on the person with whom you wish to travel
\n → A page showing the route of it appears
\n → Click on Contact " />

            <TextView
                android:id="@+id/text_question6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textStyle ="bold"
                android:text="How to save the journey of a person making the same trip as me ?" />

            <TextView
                android:id="@+id/text_answer6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Once the trip is saved, a page with the available routes appears\n → Click on the person with whom you wish to travel \n → A page showing the route of it appears \n → Click on Save" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>