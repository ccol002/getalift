<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mt.edu.um.getalift.ItemDriveView">

    <View
        android:id="@+id/rectangle_at_the_top"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="#DDDDDD"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/usr_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        tools:maxHeight="80dp"
        tools:maxWidth="80dp" />

    <TextView
        android:id="@+id/usr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/usr_icon"
        android:text="Username"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/usr_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:text="x/5" />

    <TextView
        android:id="@+id/usr_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usr_arriveAt"
        android:layout_below="@+id/usr_arriveAt"
        android:text="x min walk" />

    <TextView
        android:id="@+id/usr_arriveAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usr_date"
        android:layout_below="@+id/usr_name"
        android:text="Arrive at 3:52 PM" />

    <TextView
        android:id="@+id/usr_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/usr_icon"
        android:layout_marginEnd="12dp"
        android:text="16th of June" />

</RelativeLayout>
